{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "target": "es2019",
    "typeRoots": ["node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src"],
}
